					aria-labelledby="setupServiceTabBtn">
					<form id="ZipCodeForm">
						<label class="postalCodeLabel" for="Zipcode">Enter your Postal Code</label>
						<div class="checkAvailabilityForm row">
							<div class="col-lg-5 col-md-6 col-12 mb-2 mb-md-0">
								<input type="tel" asp-for="bookServiceSubmitViewModel.ZipCode" class="form-control"
									placeholder="Postal Code" />
								<span asp-validation-for="bookServiceSubmitViewModel.ZipCode"
									class="text-danger"></span>
								<span id="checkAvailbilityError" class="text-danger d-block"></span>
							</div>
							<button type="submit"
								class="checkAvailabilityBtn ms-2 rounded-pill col-lg-3 col-md-5 col-6">Check
								Availability</button>
						</div>
					</form>
				</div>
				<div class="tab-pane fade" id="scheduleAndPlanTab" role="tabpanel"
					aria-labelledby="scheduleAndPlanTabBtn">
					<form id="scheduleAndPlanForm">
						<div class="row g-0">
							<div class="col-lg-6 col-12">
								<label>When do you need the cleaner?</label>
								<div class="row g-0">
									<div
										class="datePicker position-relative col-7 col-md-4 col-lg-7 col-xl-4 pe-2 mb-2">
										<input type="text" asp-for="bookServiceSubmitViewModel.ServiceDate"
											class="form-control" readonly placeholder="DD/MM/YYYY" />
										<span class="text-danger"
											asp-validation-for="bookServiceSubmitViewModel.ServiceDate"></span>
									</div>
									<div class="col-5 col-md-3 col-lg-5 col-xl-3 pe-2 mb-2">
										<select asp-for="bookServiceSubmitViewModel.ServiceStartTime"
											class="form-select">
											<option value="8">8:00</option>
											<option value="8.5">8:30</option>
											<option value="9">9:00</option>
											<option value="9.5">9:30</option>
											<option value="10">10:00</option>
											<option value="10.5">10:30</option>
											<option value="11">11:00</option>
											<option value="11.5">11:30</option>
											<option value="12">12:00</option>
											<option value="12.5">12:30</option>
											<option value="13">13:00</option>
											<option value="13.5">13:30</option>
											<option value="14">14:00</option>
											<option value="14.5">14:30</option>
											<option value="15">15:00</option>
