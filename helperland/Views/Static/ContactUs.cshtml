<div class="contactUsForm container">
	<div class="contactUsFormHeader text-center">Get in touch with us</div>
	<form method="post" enctype="multipart/form-data">
		<div class="row align-items-start justify-content-center g-2">
			<div class="form-item col-12 col-sm-6">
				<input type="text" class="form-control" asp-for="FirstName" placeholder="First Name" />
				<span class="p-0 mt-1 text-danger d-block" asp-validation-for="FirstName"></span>
			</div>
			<div class="form-item col-12 col-sm-6">
				<input type="text" class="form-control" asp-for="LastName" placeholder="Last Name" />
				<span class="p-0 mt-1 text-danger d-block" asp-validation-for="LastName"></span>
			</div>
			<div class="form-item col-12 col-sm-6">
				<div class="input-group mx-0 row">
					<div class="input-group-text col-2 px-0 align-items-center justify-content-center">+91</div>
					<input type="number" class="form-control col-10" asp-for="PhoneNumber" placeholder="Mobile Number"
						aria-label="Mobile Number" aria-describedby="basic-addon1" />
					<span class="p-0 mt-1 text-danger d-block" asp-validation-for="PhoneNumber"></span>
				</div>
			</div>
			<div class="form-item col-12 col-sm-6">
				<input type="email" class="form-control" asp-for="Email" placeholder="Email Address" />
				<span class="p-0 mt-1 text-danger d-block" asp-validation-for="Email"></span>
			</div>
			<div class="form-item col-12">
				<select class="form-select" aria-label="Subect" asp-for="Subject">
					<option value="General" selected>General</option>
					<option value="Inquiry">Inquiry</option>
					<option value="Revocation">Revocation</option>
					<option value="Renewal">Renewal</option>
				</select>
			</div>
			<div class="form-item col-12">
				<textarea class="form-control" asp-for="Message" cols="30" rows="10" placeholder="Message"></textarea>
				<span class="p-0 mt-1 text-danger d-block" asp-validation-for="Message"></span>
			</div>
			<div class="form-item formFile col-12">
				<h5>Attachment</h5>
				<input type="file" asp-for="File">
				<div class="d-flex flex-wrap align-items-center">
					<label class="fileLabel rounded-pill" asp-for="File">Upload</label>
					<div class="fileName ms-3">No File Selected</div>
				</div>
			</div>
			<button class="submit rounded-pill border-0 outline-0">Submit</button>
		</div>
	</form>
</div>

